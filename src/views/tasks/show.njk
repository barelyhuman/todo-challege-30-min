{% extends 'layouts/base.njk' %}

{% block body %}
  <section class="max-w-3xl mx-auto">
    <div class="min-h-screen flex w-full justify-center">
      <form action="/tasks/{{ task.id }}" method="post" class="w-full">
        <div class="w-full">
          {# Tool Bar #}
          <div class="flex w-full items-center">
            <div class="ml-auto flex items-center gap-2 box-border">
              <div>
                <label>
                  <input class="mr-2"
                    name="published"
                    type="checkbox"
                    {%if task.done%}checked{%endif%}
                     />
                </label>
              </div>
              <button class="btn secondary">
                Update
              </button>
              <a class="btn !border-red-400 !text-red-500 !bg-transparent"
              href="/tasks/{{task.id}}/delete"
              >
                Delete
              </a>
            </div>
          </div>
          <div class="mt-5">
            <textarea autofocus
              class="border-2 border-zinc-300 focus:border-black w-full resize-none rounded-md"
              name="content"
              id=""
              rows="10"
              placholder="content">{{ task.content.trim() }}</textarea>
          </div>
        </div>
      </form>
    </div>
  </section>
{% endblock %}
